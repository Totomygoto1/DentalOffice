@page
@model DentalOffice.Pages.Visits.IndexModel

@{
    ViewData["Title"] = "Appointment List";
}

<h2>Appointment List</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Appoinment
            </th>
            <th>
                Notes
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit[0].Dentist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Visit) {
        <tr class="newFont">
            <td>
                @Html.DisplayFor(modelItem => item.visitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Firstname)
                @Html.DisplayFor(modelItem => item.Customer.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dentist.Firstname)
                @Html.DisplayFor(modelItem => item.Dentist.Lastname)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.visitID">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.visitID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
